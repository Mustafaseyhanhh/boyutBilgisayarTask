@{
}
<!--begin::Careers - Apply-->
<div class="card">
	<div class="card-header border-0 pt-5">
		<h3 class="card-title align-items-start flex-column">
			<span class="card-label fw-bolder fs-3 mb-1">Stok Ekle</span>
		</h3>
	</div>
	<!--begin::Body-->
	<div class="card-body p-lg-17">
		<p>İlaç ismi : @ViewBag.MedicamentName</p>
		<p>İlaç mevcut stok : @ViewBag.MedicamentStock</p>
		<p>İlaç Açıklama : @ViewBag.MedicamentDescription</p>
		<!--begin::Layout-->
		<div class="d-flex flex-column flex-lg-row">
			<!--begin::Content-->
			<div class="flex-lg-row-fluid me-0">
				<!--begin::Form-->
				<form action="/stock/AddStockAmount" class="form mb-15" method="POST">
					<!--begin::Input group-->
					<div class="row mb-5">
						<!--begin::Col-->
						<div class="col-md-12 fv-row">
							<!--begin::Label-->
							<label class="required fs-5 fw-bold mb-2">Eklenecek stok adedi</label>
							<!--end::Label-->
							<!--begin::Input-->
							<input type="text" class="form-control form-control-solid" placeholder="" name="stock" />
							<!--end::Input-->
						</div>
						<!--end::Col-->

					</div>
					<div class="row mb-5">
						<!--begin::Col-->
						<div class="col-md-12 fv-row">
							<!--begin::Label-->
							<label class="required fs-5 fw-bold mb-2">Yeni fiyat ( * Boş geçerseniz fiyat değiştirilmez )</label>
							<!--end::Label-->
							<!--begin::Input-->
							<input type="text" class="form-control form-control-solid" placeholder="" name="price" />
							<!--end::Input-->
						</div>
						<!--end::Col-->

					</div>
					<div class="row mb-5" style="display:none;">
						<!--begin::Col-->
						<div class="col-md-12 fv-row">
							<!--begin::Label-->
							<label class="required fs-5 fw-bold mb-2"></label>
							<!--end::Label-->
							<!--begin::Input-->
							<input type="text" class="form-control form-control-solid" placeholder="" name="id" value="@ViewBag.MedicamentId" />
							<!--end::Input-->
						</div>
						<!--end::Col-->

					</div>
					<!--end::Input group-->
					<!--begin::Submit-->
					<button type="submit" class="btn btn-primary" id="kt_careers_submit_button">
						<!--begin::Indicator-->
						<span class="indicator-label">Kaydet</span>
						<span class="indicator-progress">
							Please wait...
							<span class="spinner-border spinner-border-sm align-middle ms-2"></span>
						</span>
						<!--end::Indicator-->
					</button>
					<!--end::Submit-->
				</form>
				<!--end::Form-->

			</div>
			<!--end::Content-->

		</div>
		<!--end::Layout-->
	</div>
	<!--end::Body-->
</div>
<!--end::Careers - Apply-->